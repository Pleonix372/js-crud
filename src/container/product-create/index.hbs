<main>
  <h1 class="title">Створення товару</h1>

  <section>
    <div class="form">
      <h2 class="form__title">Інформація про товар</h2>
      <form method="POST" action="/product-create">
        <div class="form__content">

          <div class="form__product">
            <div class="form__field">
              <label for="name" class="form__label">Назва товару</label>
              <input type="name" name="name" class="form__input">
            </div>

            <div class="form__field">
              <label for="price" class="form__label">Ціна</label>
              <input type="price" name="price" class="form__input">
            </div>
          </div>


          <div class="form__field">
            <label for="description" class="form__label">Короткий опис товару</label>
            <input type="description" name="description" class="form__description-input">
          </div>
        </div>
        <div class="form__description">Відображається у картці товару</div>

        <button class="form__button">Створити товар</button>

      </form>
    </div>
  </section>
</main>



